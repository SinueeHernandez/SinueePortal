@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@model Post


@{
    ViewData["Title"] = "Blog";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>We are going to have the entries to the blog here.</p>

<section>
    <form asp-controller="Post" asp-action="Post" asp-route-returnurl="@ViewData["ReturnUrl"]" method="GET" class="form-horizontal">
        <hr />
        <div class="container">
            <div class="list-group">
                <a href=# class="list-group-item">
                    <h4 class="list-group-item-heading">
                        @Html.DisplayFor(modelItem => Model.Title)
                    </h4>
                    <p class="list-group-item-text">
                        <img src="@Url.Action("GetImageForDisplay", "Image", new {ImageId = Model.Image.Id})"/>
                    @Html.DisplayFor(modelItem => Model.Content)
                    </p>
                </a>
            </div>
        </div>
    </form>
</section>